<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ede9eb"
    android:clickable="true"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:background="@drawable/actionbar_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分享给好友"
            android:textColor="#eeeeee"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sharewithfriends_icon_back"
                android:layout_width="34dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>


    <!-- ****************************************************************************** -->

	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:background="#ffffff"
        android:orientation="vertical" >
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:adjustViewBounds="false"
                android:src="@drawable/text_sharefeedback1" />
    </LinearLayout>
        
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sharewithfriends_share_weibo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/stroke"
            android:layout_weight="5"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:adjustViewBounds="false"
                android:src="@drawable/sharewithfriends_weibo" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text="微博"
                android:textSize="17sp"
                android:textColor="#888888"/>
        </LinearLayout>
        <!-- ========================================== -->

        <LinearLayout
            android:id="@+id/sharewithfriends_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/stroke"
            android:layout_weight="5"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:src="@drawable/sharewithfriends_qq" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text=" QQ "
                android:textSize="17sp"
                android:textColor="#888888"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 8888888888888888888888888888888888888888888888888888888888888888888888888888888888888 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sharewithfriends_share_wechat"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/stroke"
            android:layout_weight="5"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:src="@drawable/sharewithfriends_wechat" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text="微信 "
                android:textSize="17sp"
                android:textColor="#888888"/>
        </LinearLayout>
        <!-- ========================================== -->

        <LinearLayout
            android:id="@+id/sharewithfriends_share_android"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/stroke"
            android:layout_weight="5"
            android:gravity="center"
            android:clickable="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:src="@drawable/sharewithfriends_android" />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:text="系统"
                android:textSize="17sp"
                android:textColor="#888888"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>