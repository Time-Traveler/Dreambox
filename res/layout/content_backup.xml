<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    <FrameLayout
        android:layout_width="fill_parent"
    android:layout_height="46dp"
    android:orientation="horizontal" >
    <TextView
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:background="@drawable/title_bar_bg"
        	android:textColor="#92de32"
        	android:textSize="25sp"
        	android:gravity="center"
        	android:text="备  份"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <Button 
        	android:id="@+id/backup_icon_back"
        	android:layout_width="34dp"
        	android:layout_height="28dp"
        	android:layout_marginLeft="10dp"
        	android:layout_gravity="center_vertical"
        	android:background="@drawable/btn_back_icon"/>
        <TextView 
            android:layout_width="wrap_content"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"/>
        <Button 
        	android:id="@+id/backup_icon_selectall"
        	android:layout_width="37dp"
        	android:layout_height="37dp"
        	android:layout_marginRight="16dp"
        	android:layout_gravity="right|center_vertical"
        	android:background="@drawable/btn_check_off_normal"/>
    </LinearLayout>
    
    </FrameLayout>
     

     
     <FrameLayout 
         android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="5">
    	
    	<LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_marginBottom="45dp"
    	android:background="#dddddd" 
    	android:orientation="vertical" >
    	
    	    <ImageView
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#92de32"/>
        	<ListView 
        	    android:id="@+id/backup_listview"
        	    android:layout_width="fill_parent"
        	    android:layout_height="fill_parent"
        	    android:dividerHeight="2px"
        	    android:divider="@drawable/list_dotted_line"
        	    android:drawSelectorOnTop="true"
        	    android:headerDividersEnabled="true"
        	    android:footerDividersEnabled="true"
        	    android:scrollbarThumbVertical="@drawable/scrollbar"
        	    ></ListView>

		</LinearLayout>
		
    	<!-- ********************************帧布局分割线，不同层****************************************** -->
		
		<ImageView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="45dp"
            android:background="#aaaaaa"/>
		<LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="45dp"
    	android:layout_gravity="bottom"
    	android:visibility="visible"
    	android:background="#f6f6f6" 
    	android:orientation="horizontal" >
        	
    		<Button
                android:id="@+id/backup_Btn_SDcard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/backup_btn_white"
                android:layout_weight="1"
                android:text="本  地"
                android:textColor="#0079ff"
                android:textSize="22sp" />
			<ImageView
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="#b4b4b4"/>
            <Button
    		    android:id="@+id/backup_Btn_Cloud"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/backup_btn_white"
        		android:layout_weight="1"
        		android:textColor="#0079ff"
        		android:textSize="20sp"
        		android:text="云端备份"/>
    	</LinearLayout>
     </FrameLayout>
</LinearLayout>
    
