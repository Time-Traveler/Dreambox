<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/apple_bg"
    android:orientation="vertical" >

    <!-- 用户头像区 -->
    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">
        <ImageView
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_gravity="center"
        	android:src="@drawable/manuser_null">          
        </ImageView>
     </FrameLayout>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#b6bac7"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
        		android:textSize="17sp"
        		android:text=" 帐 号" />
            <EditText
                android:id="@+id/register_activity_email"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="2dip"
                android:textColor = "#ff8c00"
                android:background="@null"
                android:hint="请输入手机号码"
                android:singleLine="true" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@null" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#b6bac7"
            android:orientation="horizontal" >
           <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
        		android:textSize="17sp"
        		android:text=" 密 码" />
            <EditText
                android:id="@+id/register_activity_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="2dip"
                android:textColor = "#ff8c00"
                android:background="@null"
                android:password="true"
                android:hint="设置密码"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@null" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#b6bac7"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#555555"
        		android:textSize="17sp"
        		android:text=" 确 认" />
            <EditText
                android:id="@+id/register_activity_confirm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="2dip"
                android:layout_marginBottom="2dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="2dip"
                android:textColor = "#ff8c00"
                android:background="@null"
                android:password="true"
                android:hint="确认密码"
                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@null" />
        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/register_activity_btn_Reg"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:background="@drawable/registerbutton_style" 
        android:textColor="#EEEE"
        android:textSize="20sp"
        android:text="注 册"
        />
</RelativeLayout>
